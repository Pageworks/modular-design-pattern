{
    "name": "@codewithkyle/the-box",
    "description": "A box of tools for building Craft CMS websites.",
    "version": "0.0.4",
    "author": "Kyle Andrews <andrewskyle28@gmail.com> (http://codewithkyle.com/)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/codewithkyle/the-box.git"
    },
    "keywords": [
        "craft cms",
        "craft 3",
        "framework",
        "webpack",
        "typescript",
        "page transitions",
        "ES Modules",
        "dynamic importing"
    ],
    "bugs": {
        "url": "https://github.com/codewithkyle/the-box/issues",
        "email": "andrewskyle28@gmail.com"
    },
    "typings": "./global/typescript/global.d.ts",
    "main": "./global/typescript/App.ts",
    "scripts": {
        "precommit": "lint-staged",
        "lint:sass": "stylelint  *.scss --cache --config ./build-tools/.stylelintrc --cache-location ./build-tools/.stylelintcache",
        "lint:typescript": "tslint *.ts -c ./build-tools/.tslintrc.js -p ./tsconfig.json -t verbose",
        "webpack": "cross-env NODE_ENV=development webpack --config ./webpack.config.js",
        "tsc": "tsc",
        "build": "npm run compile",
        "compile": "node ./build-tools/compile.config.js && npm-run-all compile:*",
        "compile:scripts": "tsc && cross-env NODE_ENV=production webpack --config ./webpack.config.js",
        "compile:styles": "node ./build-tools/sass.config.js",
        "compile:lint": "npm-run-all lint:*",
        "dev": "npm-run-all dev:*",
        "dev:typescript": "tsc",
        "dev:bundle": "cross-env NODE_ENV=development webpack --config ./webpack.config.js",
        "dev:sass": "node ./build-tools/sass.config.js",
        "watch": "run-p watch:*",
        "watch:typescript": "tsc -w",
        "watch:webpack": "webpack -w",
        "watch:sync": "node ./build-tools/sync.js"
    },
    "lint-staged": {
        "linters": {
            "*.ts": "npm run lint:typescript",
            "*.scss": "npm run lint:sass"
        }
    },
    "dependencies": {
        "@codewithkyle/device-manager": "^1.2.1",
        "@codewithkyle/pjax": "^2.0.0",
        "@codewithkyle/state-manager": "^1.0.0",
        "animejs": "^3.0.1",
        "uuid": "^3.3.2",
        "webpack": "^4.29.6"
    },
    "devDependencies": {
        "browser-sync": "^2.26.3",
        "chalk": "^2.4.2",
        "cross-env": "^5.2.0",
        "dotenv": "^6.2.0",
        "husky": "^1.3.1",
        "lint-staged": "^7.3.0",
        "node-sass": "^4.11.0",
        "npm-run-all": "^4.1.5",
        "ora": "^3.4.0",
        "stylelint": "^9.10.1",
        "stylelint-config-recommended-scss": "^3.2.0",
        "stylelint-scss": "^3.5.4",
        "tslint": "^5.15.0",
        "tslint-config-airbnb": "^5.11.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.4.2",
        "watch": "^1.0.2",
        "webpack-cli": "^3.3.0"
    }
}
