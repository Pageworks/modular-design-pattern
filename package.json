{
    "name": "@codewithkyle/the-box",
    "description": "To think outside the box you first need to define it.",
    "version": "0.0.2",
    "author": "Kyle Andrews <andrewskyle28@gmail.com> (http://codewithkyle.com/)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/codewithkyle/the-box.git"
    },
    "keywords": [
        "craft cms",
        "craft 3",
        "framework",
        "webpack",
        "typescript",
        "page transitions"
    ],
    "bugs": {
        "url": "https://github.com/codewithkyle/the-box/issues",
        "email": "andrewskyle28@gmail.com"
    },
    "typings": "./app/typescript/global.d.ts",
    "main": "./app/typescript/App.ts",
    "scripts": {
        "precommit": "lint-staged",
        "build": "npm-run-all compile:*",
        "compile": "npm-run-all compile:*",
        "compile:typescript": "tsc",
        "compile:components": "node-sass ./templates/components -o ./public/assets/styles/components --output-style compressed",
        "compile:objects": "node-sass ./templates/objects -o ./public/assets/styles/objects --output-style compressed",
        "bundle": "webpack"
    },
    "lint-staged": {
        "linters": {
            "app/typescript/**.*.ts": "npm run lint:typescript",
            "app/sass/**/*.scss": "npm run lint:sass"
        }
    },
    "dependencies": {
        "@codewithkyle/device-manager": "^1.1.0",
        "@codewithkyle/pjax": "^1.3.0",
        "@codewithkyle/state-manager": "latest",
        "animejs": "^3.0.1",
        "uuid": "^3.3.2",
        "webpack": "^4.29.6"
    },
    "devDependencies": {
        "browser-sync": "^2.26.3",
        "chalk": "^2.4.2",
        "cross-env": "^5.2.0",
        "dotenv": "^6.2.0",
        "husky": "^1.3.1",
        "lint-staged": "^7.3.0",
        "node-sass": "^4.11.0",
        "npm-run-all": "^4.1.5",
        "ora": "^3.2.0",
        "stylelint": "^9.10.1",
        "stylelint-config-recommended-scss": "^3.2.0",
        "stylelint-scss": "^3.5.4",
        "tslint": "^5.13.1",
        "tslint-config-airbnb": "^5.11.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.3.3333",
        "watch": "^1.0.2",
        "webpack-cli": "^3.3.0"
    }
}
