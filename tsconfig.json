{
    "compilerOptions": {
        "outDir": "./_compiled",
        "sourceMap": false,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "./global/typescript",
        "paths": {
            "BaseModule": ["BaseModule"]
        },
        "lib": [
            "dom",
            "scripthost",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext"
        ]
    },
    "exclude": [
        "./vendor",
        "./node_modules"
    ]
}
