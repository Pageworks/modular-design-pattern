{
    "compilerOptions": {
        "outDir": "./public/assets",
        "sourceMap": false,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "scripthost",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext"
        ]
    },
    "exclude": [
        "./vendor",
        "./node_modules"
    ]
}
