{
    "compilerOptions": {
        "outDir": "./_compiled",
        "rootDir": "./app/typescript",
        "sourceMap": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": false,
        "isolatedModules": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "scripthost",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext",
        ]
    },
    "exclude": [
        "./vendor",
        "./node_modules",
        "./_compiled"
    ]
}
